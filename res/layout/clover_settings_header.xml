<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:aapt="http://schemas.android.com/aapt" 

    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:layout_marginTop="@dimen/clover_vertical_padding" 
    android:layout_marginBottom="@dimen/clover_vertical_padding" 
    android:layout_marginHorizontal="@dimen/clover_card_side_margin" 
    app:cardCornerRadius="@dimen/clover_card_radius" 
    app:cardElevation="0dp">

    <FrameLayout 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">

        <LinearLayout 
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_width="match_parent"> 
                <ImageView 
                    android:src="@drawable/clover_branding_image"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>